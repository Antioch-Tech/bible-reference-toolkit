{
  "name": "biblejs-name-converter",
  "version": "2.0.2",
  "description": "Normalize bible references, convert them to machine readable formats, query and manipulate them",
  "main": "dist/src/index.js",
  "scripts": {
    "test": "nx exec -- bun test src/**/*.test.ts ",
    "build": "nx exec -- tsc",
    "prettier": "prettier . --check",
    "prettier:fix": "prettier . --write"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tim-hub/biblejs-name-converter"
  },
  "keywords": [
    "bible",
    "math",
    "query"
  ],
  "author": "@tim-hub",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tim-hub/biblejs-name-converter/issues"
  },
  "homepage": "https://github.com/tim-hub/biblejs-name-converter",
  "devDependencies": {
    "bun-types": "^1.0.1",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2",
    "nx": "16.8.1",
    "nx-cloud": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "nx": {
    "targets": {
      "test": {
        "outputs": [
          "{projectRoot}/coverage"
        ]
      },
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ]
      }
    }
  }
}
